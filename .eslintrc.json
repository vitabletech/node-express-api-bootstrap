{
    "env": {
      "node": true,
      "commonjs": false,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended", "airbnb",
      "airbnb-base", "prettier", "plugin:node/recommended"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
      "ecmaVersion": 12
    },
      "settings": {
        "import/resolver": {
          "node": {
            "paths": ["node_modules"],
            "extensions": [".js"]
          }
        }
      },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "comma-dangle": ["error", "never"],
        "no-console": "off",
        "no-unused-vars": "warn",
        "import/extensions": ["error", "always", {"ignorePackages" :true}],
        "linebreak-style": 0
    }
  }
  